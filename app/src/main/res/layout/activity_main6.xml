<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_bg_anim"
    android:id="@+id/mybackground"
    tools:context=".MainActivity6"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">



    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity = "start">




    </com.google.android.material.navigation.NavigationView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:navigationIcon="@drawable/ic_baseline_home_24"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/exOracle"
                android:background="@drawable/oracleres"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/aladin"
                    android:padding="25dp"
                    android:text="Oracle"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:fontFamily="@font/aladin"
                    android:padding="20dp"
                    android:text="expand all" />


            </RelativeLayout>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:src="@drawable/magicianres"
                android:layout_marginTop="-0dp"
                android:layout_alignParentRight="true" />




        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"
            android:elevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/exOuija"
                android:background="@drawable/ouijares">


                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="63dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/plettrorotateresize" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ouija"
                    android:fontFamily="@font/aladin"
                    android:textSize="25dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:padding="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="expand all"
                    android:fontFamily="@font/aladin"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true" />



            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/exDice"
                android:background="@drawable/bacgrounddiceres"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Runes"
                    android:textSize="25dp"
                    android:fontFamily="@font/aladin"
                    android:textColor="@color/black"
                    android:padding="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="expand all"
                    android:fontFamily="@font/aladin"
                    android:textColor="@color/black"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true" />



            </RelativeLayout>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/runesres"
                android:layout_marginTop="-0dp"
                android:layout_alignParentRight="true" />




        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            android:elevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/exPenta"
                android:background="@drawable/pentaredris">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/witchres"
                    android:layout_marginLeft="20dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pentagram"
                    android:textSize="25dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:fontFamily="@font/aladin"
                    android:padding="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="expand all"
                    android:fontFamily="@font/aladin"
                    android:background="#00000000"
                    android:textColor="@color/black"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true" />



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/exAlien"
                android:background="@drawable/backgroundalienres"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alien"
                    android:textSize="25dp"
                    android:fontFamily="@font/aladin"
                    android:textColor="@color/white"
                    android:padding="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="expand all"
                    android:fontFamily="@font/aladin"
                    android:textColor="@color/white"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true" />



            </RelativeLayout>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/ufores"
                android:layout_marginTop="-0dp"
                android:layout_alignParentRight="true" />




        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            android:elevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/exZingara"
                android:background="@drawable/zingarares">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/pentagramres"
                    android:layout_marginLeft="20dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gypsy"
                    android:textSize="25dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:fontFamily="@font/aladin"
                    android:padding="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="expand all"
                    android:fontFamily="@font/aladin"
                    android:background="#00000000"
                    android:textColor="@color/white"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true" />



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/tarocchi"
                android:background="@drawable/velluto"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/aladin"
                    android:padding="25dp"
                    android:text="Tarot cards"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:fontFamily="@font/aladin"
                    android:padding="20dp"
                    android:text="expand all" />


            </RelativeLayout>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:src="@drawable/themagician"
                android:layout_marginTop="-0dp"
                android:layout_alignParentRight="true" />




        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            android:elevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/exEgypt"
                android:background="@drawable/egypt">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/seth"
                    android:layout_marginLeft="20dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Egypt"
                    android:textSize="25dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:fontFamily="@font/aladin"
                    android:padding="25dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="expand all"
                    android:fontFamily="@font/aladin"
                    android:background="#00000000"
                    android:textColor="@color/black"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true" />



            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
</ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>